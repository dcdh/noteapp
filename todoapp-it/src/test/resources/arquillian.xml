<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://jboss.org/schema/arquillian"
	xsi:schemaLocation="http://jboss.org/schema/arquillian http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

	<!-- https://github.com/arquillian/arquillian-cube/blob/master/docs/kubernetes.adoc -->
	<extension qualifier="openshift">
		<property name="cube.username">developer</property>
		<property name="cube.password">developer</property>
		<property name="logs.copy">true</property>

		<property name="env.config.resource.name">openshift.yaml</property>
	</extension>

</arquillian>